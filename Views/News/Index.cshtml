@using DriftNews.Models.Infrastructure;
@model IEnumerable<NewsFD>
@{
    ViewData["Title"] = "News";
    Pager pager = new Pager();
    int pageNo = 0;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}
<h2>Latest News</h2>
    <table>
        <thead>
            <tr>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td class="">
                        <img width="350px" src="@obj.ImgUrl">
                    </td>
                    <td>
                        <div class="title">@obj.Title</div>
                            <div class="desc">
                            @obj.Description
                            </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
<div class="container">
    @if (pager.TotalPages > 0)
    {
        <ul class="pagination justify-content-end">
            @if(pager.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="News" asp-action="Index" asp-route-pg="1">First</a>
                </li>
                <li class="page-item">
                    <a class="page-link" asp-controller="News" asp-action="Index" asp-route-pg="(@pager.CurrentPage - 1)">Previous</a>
                </li>
            }
            @for (var pge = pager.StartPage; pge < pager.EndPage; pge++)
            {
                <li class="page-item @(pge == pager.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-controller="News" asp-action="Index" asp-route-pg="@pge">@pge</a>
                </li>
            }
@*            @if (pager.CurrentPage < pager.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="News" asp-action="Index" asp-route-pg="@pager.CurrentPage + 1">Next</a>
                </li>
                <li>
                    <a class="page-link" asp-controller="News" asp-action="Index" asp-route-pg="@pager.TotalPages">Last</a>
                </li>
            }*@
        </ul>
    }
</div>



