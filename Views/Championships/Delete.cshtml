﻿
@model News

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" disabled class="form-control" />

        </div>
        <div class="mb-3">
            <label asp-for="Url">Url</label>
            <input asp-for="Url" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Date">Date </label>
            <input asp-for="Date" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="ImgUrl">ImgUrl</label>
            <input asp-for="ImgUrl" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Description">Display Order</label>
            <input asp-for="Description" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Championship">Championship</label>
            <input asp-for="Championship" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="News" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back To List
        </a>
    </div>

</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    } 
}